<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Dark Theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="BaseEventNameText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>
</resources>