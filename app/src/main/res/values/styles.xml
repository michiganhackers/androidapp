<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!--Icons-->
        <item name="ic_arrow_down">@drawable/ic_arrow_down_light</item>
        <item name="ic_arrow_up">@drawable/ic_arrow_up_light</item>

        <item name="ic_calendar_date">@drawable/ic_calendar_date_light</item>
        <item name="ic_description">@drawable/ic_description_light</item>
        <item name="ic_location">@drawable/ic_location_light</item>

        <item name="ic_profile">@drawable/ic_profile_light</item>
        <item name="ic_account">@drawable/ic_account_light</item>
        <item name="ic_moon">@drawable/ic_moon_light</item>

        <item name="ic_add_photo">@drawable/ic_add_photo_dark</item>

        <item name="ic_email">@drawable/ic_email_light</item>
        <item name="ic_key">@drawable/ic_key_light</item>
        <item name="ic_delete_forever">@drawable/ic_delete_forever_light</item>
        <item name="ic_sign_out">@drawable/ic_sign_out_light</item>


    </style>

    <style name="BaseTheme.SplashTheme">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="BaseEventNameText.EventNameText" />

    <style name="BaseEventNameText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="EventItem">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <!--Icons-->
    <attr name="ic_arrow_down" format="reference" />
    <attr name="ic_arrow_up" format="reference" />

    <attr name="ic_calendar_date" format="reference" />
    <attr name="ic_description" format="reference" />
    <attr name="ic_location" format="reference" />

    <attr name="ic_profile" format="reference" />
    <attr name="ic_account" format="reference" />
    <attr name="ic_moon" format="reference" />

    <attr name="ic_add_photo" format="reference" />

    <attr name="ic_email" format="reference" />
    <attr name="ic_key" format="reference" />
    <attr name="ic_delete_forever" format="reference" />
    <attr name="ic_sign_out" format="reference" />

</resources>