<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary_light</item>

        <!--Icons-->
        <item name="ic_arrow_down">@drawable/ic_arrow_down_dark</item>
        <item name="ic_arrow_up">@drawable/ic_arrow_up_dark</item>

        <item name="ic_calendar_date">@drawable/ic_calendar_date_dark</item>
        <item name="ic_description">@drawable/ic_description_dark</item>
        <item name="ic_location">@drawable/ic_location_dark</item>

        <item name="ic_profile">@drawable/ic_profile_dark</item>
        <item name="ic_account">@drawable/ic_account_dark</item>
        <item name="ic_moon">@drawable/ic_moon_dark</item>

        <item name="ic_add_photo">@drawable/ic_add_photo_light</item>

        <item name="ic_email">@drawable/ic_email_dark</item>
        <item name="ic_key">@drawable/ic_key_dark</item>
        <item name="ic_delete_forever">@drawable/ic_delete_forever_dark</item>
        <item name="ic_sign_out">@drawable/ic_sign_out_dark</item>

        <item name="snackbarStyle">@style/CustomSnackbar</item>

    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/primary_light</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/primary</item>
    </style>

</resources>